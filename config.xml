<?xml version='1.0' encoding='utf-8'?>
<widget
	id="com.kindborg.eddystonebrowser"
	version="0.0.1"
	xmlns="http://www.w3.org/ns/widgets"
	xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Eddystone</name>
    <description>
        Eddystone Browser
    </description>
    <author email="mikael.kindborg@gmail.com" href="http://kindborg.com">
        Mikael Kindborg
    </author>
    <content src="index.html" />
    <gap:plugin name="cordova-plugin-whitelist" version="1" source="npm" />
    <gap:plugin name="cordova-plugin-eddystone" source="npm" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
